{
  "name": "Blue Sky Post It",
  "description": "With two clicks, post the current link, with a comment to Blue Sky.",
  "version": "1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_title": "Post this site to Blue Sky",
    "default_popup": "index.html"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "https://*/"
  ],
  "background": {
    "scripts": ["./js/serviceworker.js"],
    "persistent": true,
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}